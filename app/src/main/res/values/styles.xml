<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="baseView">
        <item name="android:background">@color/white</item>
    </style>

    <style name="baseViewContent">
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="tvBase">
        <item name="android:textColor">@color/normal_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tvAppLogoTitle" parent="tvBase">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tvTitle" parent="tvBase">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edData" parent="tvBase">
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/shape_ed_bg</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="btn" parent="tvBase">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/bg_btn</item>
    </style>

</resources>